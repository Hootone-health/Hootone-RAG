# Environment Variables Template
# Copy this file to .env and fill in your actual values
# Never commit .env to version control

# ============================================
# Required Settings
# ============================================

# JWT Secret Key - Used for signing and verifying JWT tokens
# Generate a strong random secret (minimum 32 characters recommended)
# Example: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-here-minimum-32-characters

# Database Connection String
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://username:password@host:port/database

# ============================================
# Docker Compose Environment Variables
# ============================================

# PostgreSQL Database (used by docker-compose.yml)
POSTGRES_USER=postgres_user
POSTGRES_PASSWORD=postgres_password
POSTGRES_DB=postgres_db

# PgAdmin (used by docker-compose.yml)
PGADMIN_DEFAULT_EMAIL=pgadmin_email
PGADMIN_DEFAULT_PASSWORD=pgadmin_email

# Valkey/Redis (used by docker-compose.yml)
VALKEY_PASSWORD=mysecretpassword

# ============================================
# Optional Settings (for future services)
# ============================================

# AWS S3 Configuration (if using S3 service)
# AWS_ACCESS_KEY_ID=your-aws-access-key-id
# AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
# AWS_S3_BUCKET_NAME=your-bucket-name
# AWS_REGION=us-east-1

# Valkey/Redis Configuration (if connecting to external Valkey)
# VALKEY_HOST=localhost
# VALKEY_PORT=6379

# Qdrant Configuration (if authentication is enabled)
# QDRANT_API_KEY=your-qdrant-api-key
# QDRANT_URL=http://localhost:6333

# ============================================
# Application Settings (with defaults)
# ============================================

# JWT Algorithm (default: HS256)
JWT_ALGORITHM=HS256

# JWT Token Expiration (default: 1 hour)
JWT_ACCESS_TOKEN_EXPIRE_HOURS=1

# Rate Limiting (default: 5 requests per 60 seconds)
RATE_LIMIT_REQUESTS=5
RATE_LIMIT_WINDOW_SECONDS=60
